<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:id="@+id/first"/>
        <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operator"/>
        <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="right"
        android:textColor="#ff0000"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/result"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#99c4fc"
            android:theme="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/sin"
            android:textAllCaps="false"
            android:text="sin"
            />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/clear"
        android:text="C"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/square"
        android:text="^"
        android:textAllCaps="false"
        />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#99c4fc"
            android:id="@+id/root"
            android:textAllCaps="false"
            android:text="\u221A"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#45638b"
            android:id="@+id/div"
            android:text="/"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#99c4fc"
            android:id="@+id/cos"
            android:text="cos"
            android:textAllCaps="false"
            />


    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/seven"
        android:text="7"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/eight"
        android:text="8"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/nine"
        android:text="9"/>


        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#45638b"
            android:id="@+id/mul"
            android:text="*"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#99c4fc"
            android:id="@+id/tan"
            android:textAllCaps="false"
            android:text="tan"
            />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/four"
        android:text="4"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/five"
        android:text="5"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/six"
        android:text="6"/>


        <Button

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#45638b"
            android:id="@+id/sub"
            android:text="-"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#99c4fc"
            android:id="@+id/zero"
            android:text="0"/>



        <Button
        android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#99c4fc"
        android:id="@+id/one"
        android:text="1"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/two"
        android:text="2"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#99c4fc"
        android:id="@+id/three"
        android:text="3"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#45638b"
            android:id="@+id/add"
            android:text="+"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#e1d1b8"
            android:id="@+id/equal"
            android:text="="
            />
    </LinearLayout>

</LinearLayout>